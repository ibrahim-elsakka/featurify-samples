@model List<System.Security.Claims.Claim>
@using Featurify
@using Featurify.Contracts
@using AspNetIdentityWithFeaturify.Features

@inject IFeaturifyServer Featurify

@{
    ViewData["Title"] = "Contact";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

@foreach (var item in Model)
{
    <strong>@item.Type</strong> @item.Value
    <br />
}
<hr />
<strong>ImportFeature</strong>: Enabled
<br /><br />
@if (await Featurify.Is<ImportFeature>().Enabled())
{
    <button class="btn btn-success"><i class="glyphicon glyphicon-import"></i> Import Users</button>
}
else
{
    <button class="btn btn-danger" disabled><i class="glyphicon glyphicon-import"></i> Import Users</button>
}

<br /><br />

<strong>ExportFeature</strong>: Disabled
<br /><br />
@if (await Featurify.Is<ExportFeature>().Enabled())
{
    <button class="btn btn-success"><i class="glyphicon glyphicon-export"></i> Export Users</button>
}
else
{
    <button class="btn btn-danger" disabled><i class="glyphicon glyphicon-export"></i> Export Users</button>
}

<br /><br />

<strong>EmailFeature</strong>: Enabled
<br /><br />

@if (await Featurify.Enabled<EmailFeature>())
{
    <button class="btn btn-success"><i class="glyphicon glyphicon-send"></i> Send Email</button>
}
else
{
    <button class="btn btn-danger" disabled><i class="glyphicon glyphicon-send"></i> Send Email</button>
}
